        <arguments>
          <argument>
            <kind>1</kind>
            <string>draw_text(12,12,"TUTORIAL MADE BY XARROT STUDIOS#GMTwitch - Twitch API for Game Maker: Studio#FPS: "+string(fps_real)+"#[MOUSE] to select stream, [LMB] to download stream preview thumbnail");
draw_set_halign(2);

// loop through stream list
var stream;
for(var i=0; i&lt;ds_map_size(global.Stream_list); i++;)
    {
    // find channel id
    if (i == 0)
        {
        stream = ds_map_find_first(global.Stream_list);
        }
    else
        {
        stream = ds_map_find_next(global.Stream_list,stream);
        }
    
    // check if stream is online
    var online = twitch_stream_find_value(stream,"status");
    
    // online
    if (online)
        {
        // grab stream info one value at a time
        var name = twitch_stream_find_value(stream,"name");
        var game = twitch_stream_find_value(stream,"game");
        var viewers = twitch_stream_find_value(stream,"viewers");
        var views = twitch_stream_find_value(stream,"views");
        var followers = twitch_stream_find_value(stream,"followers");
        
        // condense information in a semi-coherent way
        var str = string(name)+" is streaming "+string(game)+" to "+string(viewers)+" viewers#Total Views: "+string(views)+" / Total Followers: "+string(followers);
        var sw = string_width(str);
        
        // hover and select stream under mouse
        if (point_in_rectangle(mouse_x,mouse_y,0,64 + i*72,view_wview[0],127 + i*72))
            {
            draw_set_alpha(0.4);
            draw_set_color(c_white);
            draw_rectangle(0,64 + i*72,view_wview[0],127 + i*72,0);
            draw_set_alpha(1);
            
            // click to request thumbnail
            if (mouse_check_button_pressed(mb_left))
                {
                twitch_stream_get_thumbnail(stream,1);
                }
            }
        
        // draw stream info
        draw_set_color(c_green);
        draw_text(view_wview[0]-12,72 + i*72,"STREAM ONLINE");
        draw_set_color(c_white);
        draw_text(view_wview[0]-12,92 + i*72,str);
        
        // draw thumbnail if it exists
        var spr = twitch_stream_find_value(stream,"thumb");
        if (sprite_exists(spr))
            {
            scl = 64 / sprite_get_height(spr);
            draw_sprite_ext(spr,0,0,64 + i*72,scl,scl,0,c_white,1);
            }
        }
    else
        {
        // offline
        draw_set_color(c_red);
        draw_text(view_wview[0]-12,72 + i*72,"STREAM OFFLINE");
        }
    }

draw_set_halign(0);
draw_set_color(c_white);
</string>
